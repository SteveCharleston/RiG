<resources>

    <!-- Base application theme. -->

    <style name="content_heading">
        <item name="android:textSize">14dip</item>
        <item name="android:textColor">@color/content_heading</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="seekbar">
    </style>

    <style name="bandhoeren">
        <item name="android:background">@color/app_background</item>
    </style>

    <style name="player_fragment">
        <item name="android:background">@color/player_background</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="player_songname">
        <item name="android:textColor">@color/songname</item>
        <item name="android:textSize">14dip</item>
    </style>

    <style name="song_timestamp">
        <item name="android:textColor">@color/song_timestamp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14dip</item>
    </style>

    <style name="play_pause_button">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/play_inaktiv</item>
    </style>

    <style name="bandname">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/bandname</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily"></item>
        <item name="android:textSize">20dip</item>
        <item name="android:paddingLeft">10dip</item>
    </style>

    <style name="current_round">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/rig_green</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16dip</item>
    </style>

    <style name="content_text">
        <item name="android:textSize">14dip</item>
        <item name="android:textColor">@color/content_text</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:lineSpacingExtra">24dp</item>
    </style>

    <style name="tags_and_days_fragment">
        <item name="android:padding">10dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/ActionBar</item>

    </style>
    <style name="ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/actionbar</item>

    </style>
    <style name="AppTheme.CustomTheme" >
        <item name= "android:windowIsTranslucent">true</item>
        <item name = "android:windowCloseOnTouchOutside">true</item>
        <item name = "android:popupWindowStyle">@android:style/Widget.PopupWindow</item>


    </style>


</resources>
