<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:drawable="@drawable/rounded_button_shadow"/>
    <item
        android:drawable="@drawable/rounded_button"
        android:top="2dp"
        android:left="2dp"
        android:right="2dp"
        android:bottom="2dp" />
    <item
        android:top="25dp"
        android:left="25dp"
        android:right="25dp"
        android:bottom="25dp"
        >
        <shape android:shape="line">
            <stroke android:width="2dp"
                android:color="@color/grey"/>
            <solid android:color="@color/grey"/>
        </shape>
    </item>
    <item
        android:top="25dp"
        android:left="25dp"
        android:right="25dp"
        android:bottom="25dp"
        >
        <rotate
            android:fromDegrees="90"
            android:toDegrees="90"
            android:pivotX="50%"
            android:pivotY="50%" >
            <shape android:shape="line">
                <stroke android:width="2dp"
                        android:color="@color/grey"/>
                <solid android:color="@color/grey"/>
            </shape>
        </rotate>
    </item>

</layer-list>
